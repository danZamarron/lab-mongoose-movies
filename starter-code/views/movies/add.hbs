<h2>Add Movie</h2>
<br>
{{#if error}}
<p>{{error}}</p>
{{/if}}
<form action="/movies/add" method="POST">
    <div class="form-group">
        <label for="title">Movie:</label>
        <input class="form-control" required type="text" name="title" id="title">
    </div>    
    <div class="form-group">
        <label for="genre">Genre:</label>
        <input class="form-control" required  type="text" name="genre" id="genre">
    </div>    
    <div class="form-group">
        <label for="plot">Plot:</label>
        <input class="form-control" required type="text" name="plot" id="plot">
    </div>    
    <button class="btn btn-primary" type="submit">Add</button>&nbsp;&nbsp;<a class="btn btn-info" href="/">Return to Index</a>
</form>