<h2>Add Celebrity</h2>
<br>
{{#if error}}
<p>{{error}}</p>
{{/if}}
<form action="/celebrities/new" method="post">
        <div class="form-group">
            <label for="name">Name:</label>
            <input class="form-control" required name="name" type="text">
        </div>    
        <div class="form-group">
            <label for="occupation">Occupation:</label>
            <input class="form-control" required name="occupation" type="text">
        </div>    
        <div class="form-group">
            <label for="catchPhrase">CatchPhrase:</label>
            <input class="form-control" required name="catchPhrase" type="text">
        </div>        
    <br>
    <button class="btn btn-primary" type="submit">Add</button>&nbsp;&nbsp;<a class="btn btn-info" href="/">Return to Index</a>
</form>